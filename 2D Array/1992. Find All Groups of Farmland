class Solution {
public:
    void help(vector<vector<int>>& land, int i, int j, int n, int m, vector<int> &temp)
    {
        if(i<0 || i>=n || j<0 || j>=m || land[i][j]!=1)
            return;
        land[i][j]=-1;
        if(i+1<n && j+1<m && land[i+1][j]==0 && land[i][j+1]==0)
        {
            temp.push_back(i);
            temp.push_back(j);
            return;
        }
        if(i+1>=n && j+1>=m)
        {
            temp.push_back(i);
            temp.push_back(j);
            return;            
        }
        if(i+1>=n && j+1<m && land[i][j+1]==0)
        {
            temp.push_back(i);
            temp.push_back(j);
            return;            
        }
        if(j+1>=m && i+1<n && land[i+1][j]==0)
        {
            temp.push_back(i);
            temp.push_back(j);
            return;            
        }        
        help(land,i,j+1,n,m,temp);
        help(land,i+1,j,n,m,temp);
    }

    vector<vector<int>> findFarmland(vector<vector<int>>& land) {
        vector<vector<int>> ans;
        int n=land.size(), m=land[0].size();
        for(int i=0; i<n; i++)
        {
            for(int j=0; j<m; j++)
            {
                if(land[i][j]==1)
                {
                    vector<int> temp;
                    temp.push_back(i);
                    temp.push_back(j);
                    help(land,i,j,n,m,temp);
                    ans.push_back(temp);
                }
            }
        }
        return ans;
    }
};
